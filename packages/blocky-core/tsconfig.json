{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "model/*": [
        "src/model/*"
      ],
      "view/*": [
        "src/view/*"
      ],
      "registry/*": [
        "src/registry/*"
      ],
      "helper/*": [
        "src/helper/*"
      ],
    }
  },
  "include": [
    "src",
    "plugins"
  ],
  // "references": [{ "path": "./tsconfig.node.json" }]
}